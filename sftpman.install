_ensure_mount_path() {
	mkdir -p -m 775 /mnt/sshfs
	chown :users /mnt/sshfs
}

post_install() {
	_ensure_mount_path
	echo "You will most probably need to install openssh-askpass to use password-protected SSH keys."
	echo "Your session needs to be restarted for openssh-askpass to start working."
}

post_remove() {
	rmdir --ignore-fail-on-non-empty /mnt/sshfs
}
